{
  "manifest_version": 3,
  "name": "TimeTracker Pro",
  "version": "1.0.0",
  "description": "Controla el tiempo que pasas en cada página web con estadísticas detalladas y bloqueo de sitios",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TimeTracker Pro"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blocked_sites",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 